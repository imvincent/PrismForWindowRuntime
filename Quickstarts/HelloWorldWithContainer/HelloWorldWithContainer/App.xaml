<kona:MvvmAppBase x:Class="HelloWorldWithContainer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:HelloWorldWithContainer"
             xmlns:kona="using:Kona.Infrastructure">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Common/StandardStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <x:String x:Key="AppName">Kona: Hello World (with Container)!</x:String>
        </ResourceDictionary>
    </Application.Resources>
</kona:MvvmAppBase>
