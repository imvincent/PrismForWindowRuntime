<UserControl
    x:Class="Kona.AWShopper.Views.ShoppingCartTabUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kona.AWShopper.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:infrastructure="using:Kona.Infrastructure" mc:Ignorable="d"
    infrastructure:ViewModelLocator.AutoWireViewModel="true"
    Width="100"
    Height="100"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>
        <Button Command="{Binding ShoppingCartTabCommand}" Width="100" Height="100">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Uid="CartLabel" Text="Cart: " Style="{StaticResource BasicTextStyle}"/>
                <TextBlock Text="{Binding ItemCount}" Style="{StaticResource BasicTextStyle}"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
